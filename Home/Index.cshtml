@model Ayurveda.Models.Products
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/Home.css" rel="stylesheet" />


@Html.Partial("_LoginLayout")
<div class="container">
    <div class="row">
        <div class="col-md-12" style="text-align: center; font-family: Algerian; font-size: xx-large; color: red">
            <h3>The Ayurveda</h3>
        </div>
    </div>
</div>
<hr />
@using (Html.BeginForm())
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered">
                    <tr>
                        <th>Search</th>
                        <td>@Html.TextBoxFor(x => x.ProductName, new { @class = "form-control", @tabindex = "1" })</td>
                        <td>
                            <input type="radio" name="search" value="medicine" required="required" />Medicine
                            <input type="radio" name="search" value="disease" required="required" />Disease
                        </td>
                        <td>
                            <input type="submit" value="Search" class="btn btn-success" /></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
}

<hr />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            @{
                if (Model != null && Model.products != null && Model.products.Count() > 0)
                {
                foreach (var p in Model.products)
                {
<div class="col-md-3">
                                  <div class="col-md-3 col-sm-3 col-xs-3 col-lg-3 col-xl-3 ">
                                       <img src="data:/image/png;base64,@Convert.ToBase64String(p.ImageData, 0, p.ImageData.Length)"width="200"height="200"class="img img-thumbnail img-responseve">
                                       <br />
                                       <p>@p.ProductName @p.Price @p.Unit
                </div>
                     </div>
                }   
                }
            }
        </div>
    </div>
</div>
